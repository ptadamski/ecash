<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>

    <bindings>
      <netTcpBinding>
        <binding>
          <security mode="None"/>
        </binding>
      </netTcpBinding>
    </bindings>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="MyBeh">
          <!-- To avoid disclosing metadata information, set the values below to false before deployment -->
          <serviceMetadata httpGetEnabled="false" httpsGetEnabled="false"/>
          <!-- To receive exception details in faults for debugging purposes, set the value below to true.  Set to false before deployment to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
    <services>
      
      <service name="Bank.BankService" behaviorConfiguration="MyBeh">
        <clear />
        
        <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange"
          listenUriMode="Explicit">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        
        <endpoint address="net.tcp://localhost:2000/Bank"
          binding="netNamedPipeBinding" bindingConfiguration="" contract="Bank.IBankService" />
        
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:2000/Bank" />
            <add baseAddress="net.tcp://localhost:2000/Bank" />
          </baseAddresses>
        </host>
      </service>
    </services>
    
  </system.serviceModel>
  
</configuration>